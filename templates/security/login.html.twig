{% extends 'base.html.twig' %}

{% block title %}Se connecter {% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class=" shadow p-4" style="width: 400px;">
        {% if error %}
            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        {% if app.user %}
            <div class="mb-3">
                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
            </div>
        {% endif %}

        <h1 class="h3 mb-3 font-weight-normal text-center">Se connecter</h1>
        <form method="post">
            <div class="mb-3">
                <input placeholder="E-mail" type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus>
            </div>
            <div class="mb-3">
                <input placeholder="Mot de pas" type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
          

            <button class="btn btn-lg btn-primary w-100" type="submit">Se Connecter </button>

            <br>
            <div class="container d-flex justify-content-center align-items-center">
                <small class="form-text text-muted">
                    Vous n'avez pas un compte ? <a href="{{ path('app_registration') }}" >Creer un compte</a>.
                </small>
            </div>
            <br>
        </form>
    </div>
</div>
{% endblock %}
