{% extends 'base.html.twig' %}

{% block title %}Confirmation du transfert{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4" style="width: 500px;">
        <h3 class="text-center mb-4">Confirmer le transfert</h3>
        <p><strong>Nom :</strong> {{ name }}</p>
        <p><strong>Prénom :</strong> {{ lastname }}</p>
        <p><strong>Email :</strong> {{ email }}</p>
        <p><strong>Montant :</strong> $ {{ data.amount }}</p>
        <p><strong>Frais de transaction :</strong> $ {{ fees }}</p>
        <p><strong>Montant total débité :</strong> $ {{ data.amount + fees }}</p>

        <div class="d-flex justify-content-end mt-4">
            <a href="{{ path('app_transfer_confirm', {confirm: 'true'}) }}" class="btn btn-success me-2">Confirmer</a>
            <a href="{{ path('app_transfer_confirm', {confirm: 'false'}) }}" class="btn btn-danger">Annuler</a>
        </div>
    </div>
</div>
{% endblock %}
