{# templates/deposit/deposit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Dépôt de Fonds{% endblock %}

{% block body %}
    <div class="container mt-5" style="background: linear-gradient(to right, #ffcccb, #e0f7fa); padding: 20px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);">
        <div class="row">
            <!-- Colonne de gauche pour les informations de dépôt -->
            <div class="col-md-8">
                <h1 style="font-size: 1.5rem;">Effectuer un Dépôt en Crypto-monnaie</h1>
                <p class="text-muted mt-3" style="font-size: 0.9rem;">
                    Tous les dépôts et retraits sur CoinLink se font via des transferts entre utilisateurs. 
                    Un utilisateur possédant des fonds sur son compte CoinLink peut recharger un autre utilisateur. 
                    Cette page est destinée aux utilisateurs souhaitant effectuer un dépôt via la crypto-monnaie. 
                    Notre plateforme utilise le réseau TRON pour les dépôts en crypto.
                </p>

                <div class="my-4 text-center">
                    <!-- QR Code pour l'adresse de dépôt TRON (insérez l'image de votre QR code ici) -->
                    <img src="/path/to/your/qr-code-image.png" alt="QR Code pour dépôt TRON" style="width: 200px; height: 200px;"/>
                    
                    <div class="mt-3">
                        <h6 class="font-weight-bold">
                            <i class="fas fa-wallet"></i> Adresse de dépôt TRON
                        </h6>
                        <p class="card-text" style="font-size: 0.9rem;">
                            TX9f3...ABC12345
                            <button onclick="copyToClipboard('TX9f3...ABC12345')" class="btn btn-link btn-sm"><i class="fas fa-copy"></i></button>
                        </p>
                    </div>
                </div>

                <!-- Formulaire pour l'adresse publique de l'utilisateur -->
                <form class="mt-4">
                    <div class="form-group">
                        <label for="userPublicAddress" class="font-weight-bold"><i class="fas fa-address-card"></i> Votre Adresse Publique (TRON)</label>
                        <input type="text" id="userPublicAddress" name="userPublicAddress" class="form-control" placeholder="Entrez votre adresse publique TRON" required>
                    </div>
                    
                    <button type="submit" class="btn btn-primary mt-3">Soumettre le dépôt</button>
                </form>
            </div>

            <!-- Colonne de droite pour le contact d'assistance -->
            <div class="col-md-4 text-center">
                <div class="mt-4">
                    <h5 class="font-weight-bold"><i class="fas fa-info-circle"></i> Besoin d'aide ?</h5>
                    <p class="text-muted" style="font-size: 0.9rem;">Pour toute question ou assistance, contactez-nous sur WhatsApp :</p>
                    <a href="https://wa.me/243840149027" target="_blank" class="btn btn-success" style="font-size: 1rem;">
                        <i class="fab fa-whatsapp"></i> +243 840149027
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- JavaScript pour copier l'adresse de dépôt -->
    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert('Adresse copiée dans le presse-papiers !');
            }, (err) => {
                console.error('Erreur lors de la copie : ', err);
            });
        }
    </script>
{% endblock %}
