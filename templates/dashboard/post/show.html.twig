{% extends 'base.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block body %}
    <!-- Fixed navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="{{ path('app_home') }}">CoinLinkBlog</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation"><span class="navbar-toggler-icon"></span></button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav ms-auto mb-2 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_home') }}">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="{{ path('app_dashboard') }}">Secure Wallet</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Page content-->
    <div class="container mt-2" style="padding-top: 80px;">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <!-- Post content-->
                <article class="bg-dark p-4">
                    <!-- Post header-->
                    <header class="mb-4">
                        <!-- Post title-->
                        <h1 class="fw-bolder mb-1">{{ post.title }}</h1>
                        <!-- Post meta content-->
                        <div class="text-white mb-2">
                            Posted on {{ post.createdat|date('F j, Y') }} by {{ post.authorid.name }} - Views: {{ post.views }}
                        </div>
                    </header>

                    <!-- Preview image figure-->
                    <figure class="mb-4">
                        <img class="img-fluid rounded w-100" src="{{ asset('uploads/thumbnails/' ~ post.thumbnail) }}" alt="Image de l'article" />
                    </figure>

                    <!-- Post content-->
                    <section class="mb-5">
                    
                   <div class="fs-6 mb-4">
                        {% set lines = post.content|split("\n") %}
                        {% for paragraph in lines|batch(5) %}
                            <p class="text-white text-justify ">{{ paragraph|join(' ') }}</p>
                        {% endfor %}
                    </div>


                    </section>
                </article>
            </div>
        </div>
    </div>

    <!-- Fixed Footer-->
    <footer class="py-3 bg-dark fixed-bottom">
        <div class="container">
            <p class="m-0 text-center text-white">Copyright; CoinLink Corporation 2024</p>
        </div>
    </footer>

    <!-- Bootstrap core JS-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Core theme JS-->
    <script src="js/scripts.js"></script>

    <style>
        /* Dégradé pour les liens dans la navbar */
        .navbar-nav .nav-link {
            background: linear-gradient(to right, #ff7e5f, #feb47b);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            transition: all 0.3s ease;
        }

        /* Effet au survol des liens */
        .navbar-nav .nav-link:hover {
            background: linear-gradient(to right, #feb47b, #ff7e5f);
        }
        body{
            font-family: Arial, sans-serif;
            background-color: dark;
            color: #ffffff;
        }
    </style>
{% endblock %}
