{# templates/transaction/show.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Détails de la Transaction{% endblock %}

{% block body %}
    <div class="container mt-5" style="background: linear-gradient(to right, #ffcccb, #e0f7fa); padding: 20px; border-radius: 10px; box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 style="font-size: 1.5rem;">Détails de la Transaction</h1>
            <a href="{{ path('app_dashboard') }}" class="btn btn-primary">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>

        <div class="row">
            <div class="col-md-6 mb-3">
                
                
                <div class="mb-3">
                    <h6 class="font-weight-bold">
                        <i class="fas fa-wallet"></i> ID du compte
                    </h6>
                    <p class="card-text" style="font-size: 0.9rem;">
                        {{ transactionHystory.accountid }}
                        <button onclick="copyToClipboard('{{ transactionHystory.accountid }}')" class="btn btn-link btn-sm"><i class="fas fa-copy"></i></button>
                    </p>
                </div>

                <div class="mb-3">
                    <h6 class="font-weight-bold">
                        <i class="fas fa-dollar-sign"></i> Montant
                    </h6>
                    <p class="card-text" style="font-size: 0.9rem;">
                        ${{ transactionHystory.amount }}
                    </p>
                </div>

                <div class="mb-3">
                    <h6 class="font-weight-bold">
                        <i class="fas fa-calendar-alt"></i> Date de la transaction
                    </h6>
                    <p class="card-text" style="font-size: 0.9rem;">
                        {{ transactionHystory.transactiondate|date('Y-m-d H:i:s') }}
                    </p>
                </div>
            </div>

            <div class="col-md-6 mb-3">
                <div class="mb-3">
                    <h6 class="font-weight-bold">
                        <i class="fas fa-file-alt"></i> Description
                    </h6>
                    <p class="card-text" style="font-size: 0.9rem;">
                        {{ transactionHystory.description }}
                    </p>
                </div>

                <div class="mb-3">
                    <h6 class="font-weight-bold">
                        <i class="fas fa-hashtag"></i> Hash
                    </h6>
                    <p class="card-text" style="font-size: 0.9rem;">
                        {{ transactionHystory.hash }}
                        <button onclick="copyToClipboard('{{ transactionHystory.hash }}')" class="btn btn-link btn-sm"><i class="fas fa-copy"></i></button>
                    </p>
                </div>

                <div class="mb-3">
                    <h6 class="font-weight-bold">
                        <i class="fas fa-arrow-right"></i> ID du compte destinataire
                    </h6>
                    <p class="card-text" style="font-size: 0.9rem;">
                        {{ transactionHystory.toaccountid }}
                        <button onclick="copyToClipboard('{{ transactionHystory.toaccountid }}')" class="btn btn-link btn-sm"><i class="fas fa-copy"></i></button>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <script>
        function copyToClipboard(text) {
            navigator.clipboard.writeText(text).then(() => {
                alert('Copié dans le presse-papiers !');
            }, (err) => {
                console.error('Erreur lors de la copie : ', err);
            });
        }
    </script>
{% endblock %}
